<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <h1><%= title %></h1>
    <input type="text" value="<%= id %>">
    <table class="table">
      <thead>
        <tr>
          <th>title</th>
          <th>desciption</th>
          <th>price</th>
          <th>action</th>
        </tr>
      </thead>

      <% if(records.length > 0) { %>
        <% records.forEach(function(row) { %>
          <tr>
            <td><%= row.title %></td>
            <td><%= row.desc %></td>
            <td><%= row.price %></td>
            <td> 
              <a class="btn btn-primary btn-xs" href="/updateProduct/<%= row._id %>"> E <i class="fa fa-edit"></i> </a>
              <a class="btn btn-dan btn-xs" href="/deleteProduct/<%= row._id %>"> E <i class="fa fa-edit"></i> </a>
            </td>
          </tr>
        <% })} else { %>
          <tr>
            <td>No Records Found.</td>
          </tr>
        <% } %>
    </table>

    <form action="/addproduct/<%= id %>" method="post">
      <button type="button" class="btn btn-danger"> <a href="./" style="color: white;" >Logout</a> </button>

      <input type="submit" value="Add New Product" class="btn btn-primary">
    </form>

  </body>
</html>
